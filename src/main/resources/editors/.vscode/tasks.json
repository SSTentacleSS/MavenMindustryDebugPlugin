{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸ§° Build",
            "type": "shell",
            "command": "./mvnw",
            "windows": {
                "command": ".\\mvnw.cmd"
            },
            "args": [
                "wrapper:wrapper", "clean", "package"
            ],
            "group": "build"
        },
        {
            "label": "ðŸ§° Debug",
            "dependsOn": "ðŸ§° Build",
            "type": "shell",
            "command": "./mvnw",
            "windows": {
                "command": ".\\mvnw.cmd"
            },
            "args": [
                "mindustry:debug", "-DdebugPort=8000"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Listening",
                        "endsPattern": "Listening"
                    }
                }
            ],
            "group": "build"
        }
    ]
}